{
  "name": "node_serial_communication",
  "version": "1.0.0",
  "description": "Serial Communication With NodeJS",
  "main": "index.ts",
  "scripts": {
    "docs::swagger": "node ./swagger.js",
    "build": "tsc --build",
    "build:docker": "npm run test && npm run build",
    "start": "npm run docs::swagger && node ./build/src/server.js",
    "start:dev": "npm run docs::swagger && ts-node src/server.ts",
    "start:docker": "npm run start",
    "lint:fix": "eslint ./src/**/*.{ts,js} --fix",
    "lint:staged": "eslint --fix;",
    "format:fix": "prettier --check --write --ignore-path .gitignore ./src/**/*.{ts,js}",
    "format:check": "prettier --check --ignore-path .gitignore ./src/**/*.{ts,js}",
    "test": "jest --passWithNoTests --color",
    "test:staged": "jest --passWithNoTests --color --findRelatedTests",
    "test:dev": "jest --watchAll --coverage --passWithNoTests --color",
    "test:docker": "npm run test:coverage && npm run test:dev",
    "code:ci": "npm run format:fix && npm run lint:fix && npm run test:coverage",
    "db:sync": "prisma generate && prisma db push",
    "husky:setup": "husky init",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Samuel-Ricardo/node_serial_communication.git"
  },
  "author": "Samuel Ricardo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Samuel-Ricardo/node_serial_communication/issues"
  },
  "homepage": "https://github.com/Samuel-Ricardo/node_serial_communication#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "inversify": "^6.0.2",
    "inversify-inject-decorators": "^3.1.0",
    "reflect-metadata": "^0.2.2",
    "serialport": "^12.0.0",
    "swagger-autogen": "^2.23.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.5"
  }
}
